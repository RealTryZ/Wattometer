<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Address of FRITZ!Box') }}</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.Wattometer.address">
        </div>
        <label class="control-label">{{ _('FRITZ!Box Username') }}</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.Wattometer.username">
        </div>
        <label class="control-label">{{ _('FRITZ!Box Password') }}</label>
        <div class="controls">
            <input type="password" class="input" data-bind="value: settings.plugins.Wattometer.password">
        </div>
        <label class="control-label">{{ _('AIN of Smart Plug') }}</label>
        <div class="controls">
            <input type="text" class="input" data-bind="value: settings.plugins.Wattometer.ain">
        </div>
        <label class="control-label">{{ _('Measurement Intervall') }}</label>
        <div class="controls">
            <input type="number" class="input" data-bind="value: settings.plugins.Wattometer.intervall">
        </div>
        <label class="control-label">{{ _('Display Time') }}</label>
        <div class="controls">
            <input type="number" class="input" data-bind="value: settings.plugins.Wattometer.displaytime">
        </div>
    </div>
</form>